<view class='page'>
  <view class='page__hd'>
    <view class='section__ctn'>
      <image src='../../images/user.png' style='width:100px; height: 100px;'></image>
    </view> 
  </view>

  <view class='page__bd'>
    <view class='section'>
      <input bindinput='bindEmailInput' placeholder='邮箱'/>
    </view>

    <view class='section'>
      <input bindinput='bindPasswordInput' type='password' placeholder='密码'/>
    </view>

    <view class='section'>
      <view class='btn-area'>
        <button type='primary' ontap="login">登录</button>
      </view>
    </view>
    <view class='section'>
      <view class='btn-area'>
        <button type='default' bindtap='gotoregister'>注册</button>
      </view>
    </view>
    <view class='section'>
      <view class='btn-area'>
        <button type='default' bindtap='forgotpassword'>忘记密码</button>
      </view>
    </view>

  </view>
</view> 